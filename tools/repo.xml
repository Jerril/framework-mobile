<?xml version="1.0" encoding="UTF-8"?>
<project name="Frameworks updates">

	<property file="./update/build.config" />
	
	<target name="All" depends="Starling,Feathers,Graphics,Particles,Flox,GreenSock,Pixel Mask,Android Device Info,Dragon Bones" description="Update all frameworks" />
	
    <!-- Starling Framework -->
    <target name="Starling" description="Updates Starling Framework">
    	<exec dir="update" executable="/bin/sh">
    		<arg value="u.sh"/>
    		<arg value="${lib_starling_repo}"/>
    		<arg value="${lib_starling_name}"/>
    		<arg value="${lib_starling_us}"/>
    	</exec>
